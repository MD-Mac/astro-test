---
// Import components
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
// Import styles
import '../styles/global.css';

// Define page metadata and HEAD variables
const metaTitle = "META: My Astro Learning Blog";
const metaDescription = "This is the blog page of my test Astro site.";
const trackPage = true;

// Define page title variables
const pageTitle = "My Astro Learning Blog";
---
<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width" />
    <title>{metaTitle}</title>
    <meta name="description" content={metaDescription} />
    <meta name="robots" content={trackPage ? "index, follow" : "noindex, nofollow"} />
  </head>
  <body>
    <Navigation />

    <h1>{pageTitle}</h1>
    <p>This is where I will post about my journey learning Astro.</p>
    <ul>
      <li><a href="/posts/post-1/">Post 1</a></li>
      <li><a href="/posts/post-2/">Post 2</a></li>
      <li><a href="/posts/post-3/">Post 3</a></li>
    </ul>

    <Footer />
  </body>
</html>